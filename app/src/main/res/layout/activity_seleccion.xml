<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".SeleccionActivity">

 <CheckBox
     android:id="@+id/chkSeleccionado"
     android:text="Selecciondo"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:onClick="ValidaSeleccion"
/>
    <Switch
        android:id="@+id/swSeleccionar"
        android:text="Permitir  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="ValidaSeleccion"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp">

        <RadioButton
            android:id="@+id/rb1"
            android:text="Radio Uno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="ValidaSeleccion"/>
        <RadioButton
            android:id="@+id/rb2"
            android:text="Radio Dos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="ValidaSeleccion"/>
    </RadioGroup>
</LinearLayout>